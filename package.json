{
  "name": "finance-app",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de control de finanzas personales",
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter api dev\"",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --filter api build && pnpm --filter web build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "test": "pnpm --filter api test && pnpm --filter web test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "db:migrate": "pnpm --filter api prisma:migrate",
    "db:generate": "pnpm --filter api prisma:generate",
    "db:studio": "pnpm --filter api prisma:studio",
    "db:seed": "pnpm --filter api prisma:seed"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
